<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dynamic Form Generation</title>
  <style>
    /* CSS styles can be added here */

    .dialog{
        display: flex;
        flex-direction: column;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }
    .choicesDiv{
        display: flex;
        gap: 10px;
    }
    .choice {
      display: inline-block;
      margin-bottom: 10px;
    }

    .choiceButton {
      padding: 8px 20px;
      margin: 5px;
      background-color: #ccc;
      border-radius: 5px;
      cursor: pointer;
      text-align: center;
    }

    .selected {
      background-color: #00ff00; /* Change the color as desired for selected button */
    }
  </style>
</head>
<body>
  <form id="dynamicForm" class="dialog">
    <!-- The generated form will appear here -->
  </form>

  <script>
    
    // Example usage of the function with an array of form elements
    const formElementsArray = [
      { content: 'Regular Input', type: 'label' },
      { type: 'input', inputType: 'text', name: 'regularInput', placeholder: 'Enter your information' },
      { content: 'Text Area', type: 'label' },
      { type: 'textarea', name: 'textArea', rows: '4', cols: '50' },
      {
        type: 'multipleChoice',
        name: 'radio',
        choices: [
          { label: '10%', value: '10' },
          { label: '15%', value: '15' },
          { label: '25%', value: '25' },
          { label: '50%', value: '50' }
        ]
      },
      { type: 'button', content: 'Submit', endpointURL: '/' } // Add endpointURL to the button object
      // Add more objects to generate more form elements
    ];

    // Generate the form based on the provided array of elements
    generateFormElements(formElementsArray);
  </script>
</body>
</html>
